<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PertemuanKedua.DetailActivity"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/text_detailjudu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="judul"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/img_detail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/text_detailjudu"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/text_detailtgl"
        android:layout_below="@+id/img_detail"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tanggal film film"
        android:textStyle="italic"
        android:textSize="12dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/purple_700"/>

    <TextView
        android:id="@+id/text_detailsutradara"
        android:layout_below="@+id/text_detailtgl"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sutradara film"
        android:textSize="17dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/text_detaildescrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_detailsutradara"
        android:layout_centerHorizontal="true"
        android:text="Descripstion"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Data"
        android:layout_above="@+id/tombol_hapus"
        android:id="@+id/tombol_edit"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hapus Data"
        android:id="@+id/tombol_hapus"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>