<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MingguKedua.LiveDataViewModel.LiveDataViewModelActivity"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <TextView
        android:id="@+id/text_nilain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="..."
        android:textSize="50dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_nilain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_nilain"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:textSize="50dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_tambahn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add +1"
        android:layout_below="@+id/tv_nilain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

</RelativeLayout>